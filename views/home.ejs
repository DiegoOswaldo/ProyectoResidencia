</head>
<body>
<main>
    <nav class="main-menu no-imprimir">
        <h1>DASHBOARD</h1>
        <ul>
            <li class="nav-item <%= activePage === 'inicio' ? 'active' : '' %>">
                <b></b>
                <b></b>
                <a href="/home/inicio">
                    <i class="fa fa-house nav-icon"></i>
                    <span class="nav-text">Inicio</span>
                </a>
            </li>

            <li class="nav-item <%= activePage === 'estadisticas' ? 'active' : '' %>">
                <b></b>
                <b></b>
                <a href="/home/estadisticas">
                    <i class="fa fa-person-running nav-icon"></i>
                    <span class="nav-text">Estadísticas</span>
                </a>
            </li>

            <li class="nav-item <%= activePage === 'usuarios' ? 'active' : '' %>">
                <b></b>
                <b></b>
                <a href="/home/usuarios">
                    <i class="fa fa-user nav-icon"></i>
                    <span class="nav-text">Usuarios</span>
                </a>
            </li>


            <li class="nav-item <%= activePage === 'reportes' ? 'active' : '' %>">
                <b></b>
                <b></b>
                <a href="/home/reportes">
                    <i class="fa fa-sliders nav-icon"></i>
                    <span class="nav-text">Reportes</span>
                </a>
            </li>
        </ul>
    </nav>

    <section class="content">
        <div class="left-content">
            <% if (activePage === 'inicio') { %>
                <div class="activities">
                    <h1>Evaluaciones</h1>
                    <div class="activity-container">
                        <!-- Botón para agregar evaluación -->
                        <a href="/evaluaciones/save" class="image-container img-three">
                            <i class="fas fa-plus"></i>
                            <div class="overlay">
                                <h3>Agregar evaluación</h3>
                            </div>
                        </a>
                        <% formulariosConImagenes.forEach(({id, nombre, imagen}, index) => { %>
                            <a href="/evaluaciones/info?id=<%= encodeURIComponent(id) %>&&nombre=<%= encodeURIComponent(nombre) %>"
                               class="image-container img-three">
                                <img src="<%= imagen %>" alt="running"/>
                                <div class="overlay">
                                    <h3><%= nombre %></h3>
                                </div>
                            </a>
                        <% }); %>
                    </div>
                </div>
            <% } else if (activePage === 'estadisticas') { %>
                <div class="left-bottom">
                    <div class="weekly-schedule">
                        <h1>CALENDARIO DE EVALUACIONES</h1>
                        <div class="calendar">
                            <div class="day-and-activity activity-one">
                                <div class="day">
                                    <h1>11</h1>
                                    <p>SEPT</p>
                                </div>
                                <div class="activity">
                                    <h2>ING SISTEMAS</h2>

                                </div>
                                <a href="https://tesji.edomex.gob.mx/"
                                   class="btn">ver</a>
                            </div>

                            <div class="day-and-activity activity-two">
                                <div class="day">
                                    <h1>15</h1>
                                    <p>SEPT</p>
                                </div>
                                <div class="activity">
                                    <h2>ING CIVIL</h2>
                                </div>
                                <a href="https://tesji.edomex.gob.mx/"
                                   class="btn">ver</a>
                            </div>

                            <div class="day-and-activity activity-three">
                                <div class="day">
                                    <h1>18</h1>
                                    <p>SEPT</p>
                                </div>
                                <div class="activity">
                                    <h2>ING LOGISTICA</h2>
                                </div>
                                <a href="https://tesji.edomex.gob.mx/"
                                   class="btn">ver</a>
                            </div>

                            <div class="day-and-activity activity-four">
                                <div class="day">
                                    <h1>21</h1>
                                    <p>SEPT</p>
                                </div>
                                <div class="activity">
                                    <h2>ING INDUSTRIAL</h2>

                                </div>
                                <a href="https://tesji.edomex.gob.mx/"
                                   class="btn">ver</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else if (activePage === 'AplicarEncuesta') { %>
                <div class="left-bottom">
                    <div class="personal-bests">
                        <h1>Personal Bests</h1>
                        <div class="personal-bests-container">
                            <div class="best-item box-one">
                                <p>Fastest 5K Run: 22min</p>
                                <img src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/242bbd8c-aaf8-4aee-a3e4-e0df62d1ab27"
                                     alt=""/>
                            </div>
                            <div class="best-item box-two">
                                <p>Longest Distance Cycling: 4 miles</p>
                                <img src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/a3b3cb3a-5127-498b-91cc-a1d39499164a"
                                     alt=""/>
                            </div>
                            <div class="best-item box-three">
                                <p>Longest Roller-Skating: 2 hours</p>
                                <img src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/e0ee8ffb-faa8-462a-b44d-0a18c1d9604c"
                                     alt=""/>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else if (activePage === 'usuarios') { %>
                <div class="friends-activity"><h1>Respuestas por encuesta</h1>
                    <div class="personal-bests-containerencuestas">
                        <% formulariosConImagenes.forEach((formulario) => { %>
                            <a href="/home/encuesta-data?idFormulario=<%= encodeURIComponent(formulario.id) %>"
                               class="btnUsuarios">
                                <div class="best-item box-one tipo-<%= formulario.tipo %>">
                                    <p><%= formulario.nombre %></p>
                                </div>
                            </a>
                        <% }); %>
                    </div>
                </div>
            <% } else if (activePage === 'encuesta-data') { %>
                <div class="friends-activity">
                    <h1>ACTIVIDAD</h1>
                    <div class="card-container">
                        <% respuestas.forEach((respuesta) => { %> <!-- Iterar respuestas -->
                        <div class="card">
                            <% headers.forEach((header) => { %> <!-- Iterar sobre los encabezados -->
                            <div class="card-item">
                                <h3><%= header %></h3> <!-- Mostrar la pregunta (encabezado) -->
                                <p><%= respuesta[header] || "Sin respuesta" %></p> <!-- Mostrar la respuesta -->
                            </div>
                            <% }) %>
                        </div>
                        <% }) %>
                    </div>
                </div>
            <% } else if (activePage === 'reportes') { %>
                <div class="activity-container">
                    <% formulariosConImagenes.forEach((formulario) => { %>
                        <div class="active-calories tipo-<%= formulario.tipo %>">
                            <h1 style="align-self: flex-start">
                                <%= formulario.nombre %>
                            </h1>
                            <div class="active-calories-container">
                                <div class="box" style="--i: <%= formulario.porcentaje %>%">
                                    <div class="circle">
                                        <h2><%= formulario.porcentaje %>
                                            <small>%</small></h2>
                                    </div>
                                </div>
                                <div class="calories-content">
                                    <p><span>esta sem:</span> <%= formulario.weeklyCount %></p>
                                    <p><span>este mes:</span> <%= formulario.monthlyCount %></p>
                                    <p><span>total:</span> <%= formulario.totalCount %></p>
                                </div>
                            </div>
                            <div>
                                <!-- Botón que redirige a otra vista con el parámetro "nombre" -->
                                <a href="/home/metricas?idFormulario=<%= encodeURIComponent(formulario.id) %>"
                                   class="btn">ver</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else if (activePage === 'metricas') { %>
                <div class="friends-activity">
                    <div class="card-container">
                        <h1>Detalles de: <%= nombreFormulario %></h1>

                        <!-- Botón para imprimir -->
                        <button onclick="imprimirMetricas()" class="btn-imprimir btn">Imprimir reporte</button>

                        <% headers.forEach((header, index) => { %> <!-- Iterar sobre los encabezados -->
                        <div class="card-item">
                            <h3><%= header %></h3> <!-- Mostrar la pregunta (encabezado) -->
                            <!-- Contenedor con un ID dinámico basado en el índice -->
                            <div id="chart-<%= index %>" style="width: 600px; height: 400px;"></div>
                        </div>
                        <% }) %>
                        <a href="/home/reportes" class="no-imprimir">Regresar a reportes</a>
                    </div>
                </div>
            <% } %>

        </div>

        <div class="right-content no-imprimir">
            <div class="user-info">

                <div class="icon-container">
                    <i class="fa fa-bell nav-icon"></i>
                    <i class="fa fa-message nav-icon"></i>
                </div>
                <h4 class="nombreg">Diego Oswaldo Martinez Salazar</h4>

                <div class="icon-container">
                    <a href="/logout">
                        <i class="fa-solid fa-arrow-right-from-bracket nav-icon"></i>
                    </a>
                </div>
            </div>


            <div class="friends-activity">
                <h1>FEATURES</h1>
                <div class="card-container">
                    <!-- Card 1 -->
                    <div class="card">
                        <div class="card-user-info">
                            <h2>Mejoras de Diseño</h2>
                        </div>
                        <p>
                            Implementación de una interfaz más intuitiva y atractiva para los usuarios, mejorando la
                            experiencia visual y de navegación.
                        </p>
                    </div>

                    <!-- Card 2 -->
                    <div class="card card-two">
                        <div class="card-user-info">
                            <h2>Optimización de Gráficas</h2>
                        </div>
                        <p>
                            Reducción del tiempo de carga de gráficos interactivos mediante el uso de bibliotecas más
                            eficientes y estructuras de datos mejoradas.
                        </p>
                    </div>

                    <!-- Card 3 -->
                    <div class="card">
                        <div class="card-user-info">
                            <h2>Reducción de Procesado</h2>
                        </div>
                        <p>
                            Optimización de algoritmos para acelerar el procesamiento de grandes volúmenes de datos,
                            logrando reducir el tiempo de ejecución en un 30%.
                        </p>
                    </div>

                    <!-- Card 4 -->
                    <div class="card card-two">
                        <div class="card-user-info">
                            <h2>Automatización de Tareas</h2>
                        </div>
                        <p>
                            Implementación de scripts automatizados para tareas administrativas, reduciendo la
                            intervención manual y minimizando errores.
                        </p>
                    </div>

                    <!-- Card 5 -->
                    <div class="card">
                        <div class="card-user-info">
                            <h2>Acceso Multidispositivo</h2>
                        </div>
                        <p>
                            Adaptación del sitio para que sea completamente responsivo y funcional en dispositivos
                            móviles, tabletas y escritorio.
                        </p>
                    </div>

                    <!-- Card 6 -->
                    <div class="card card-two">
                        <div class="card-user-info">
                            <h2>Integración de Herramientas Educativas</h2>
                        </div>
                        <p>
                            Añadido soporte para plataformas externas como Google Classroom, Microsoft Teams y otras
                            herramientas educativas.
                        </p>
                    </div>
                </div>
            </div>


        </div>
    </section>
</main>
<script type="text/javascript">
    function imprimirMetricas() {
        // Ocultar elementos específicos
        document.querySelectorAll('.no-imprimir').forEach(el => el.style.display = 'none');

        // Ejecutar impresión
        window.print();

        // Restaurar elementos ocultos después de la impresión
        document.querySelectorAll('.no-imprimir').forEach(el => el.style.display = '');
    }

    // Asegúrate de que este script se cargue después de que los elementos HTML estén disponibles
    document.addEventListener("DOMContentLoaded", function () {
        // Simulamos datos dinámicos para cada pregunta
        let chartData = <%- JSON.stringify(info) %>;
        chartData = JSON.parse(JSON.stringify(chartData).replace(/&#34;/g, '"'));


        console.log(chartData)
        // Itera sobre los datos y genera un gráfico para cada contenedor

        chartData.forEach((item, index) => {
            const chartContainer = document.getElementById(`chart-${index}`);

            if (chartContainer) {
                const myChart = echarts.init(chartContainer);

                if (item.type === "pie") {
                    // Gráfico circular
                    const option = {
                        title: {left: "center"},
                        tooltip: {trigger: "item", formatter: "{b} : {c} ({d}%)"},
                        series: [
                            {
                                type: "pie",
                                radius: "65%",
                                center: ["50%", "50%"],
                                data: item.data,
                                emphasis: {
                                    itemStyle: {
                                        shadowBlur: 10,
                                        shadowOffsetX: 0,
                                        shadowColor: "rgba(0, 0, 0, 0.5)",
                                    },
                                },
                            },
                        ],
                    };
                    myChart.setOption(option);
                } else if (item.type === "line") {
                    // Gráfico de línea para fechas
                    const option = {
                        title: {left: "center"},
                        tooltip: {trigger: "axis", formatter: "{b}: {c}"},
                        xAxis: {type: "category", data: item.data.map((d) => d.name)},
                        yAxis: {type: "value"},
                        series: [
                            {
                                type: "line",
                                data: item.data.map((d) => d.value[1]),
                            },
                        ],
                    };
                    myChart.setOption(option);
                } else if (item.type === "list") {
                    // Mostrar preguntas abiertas como lista
                    const listHtml = item.data
                        .map((response, idx) => `<li>${idx + 1}. ${response}</li>`)
                        .join("");
                    chartContainer.innerHTML = `
                    <ul>${listHtml}</ul>
                `;
                }
            }
        });
    });

</script>
</body>
</html>
